{
  "mcpServers": {
    "agent-builder": {
      "command": "core/.venv/bin/python",
      "args": ["-m", "framework.mcp.agent_builder_server"],
      "cwd": "core",
      "env": {
        "PYTHONPATH": "../tools/src"
      }
    },
    "tools": {
      "command": "tools/.venv/bin/python",
      "args": ["tools/mcp_server.py", "--stdio"],
      "cwd": ".",
      "env": {
        "PYTHONPATH": "tools/src:core"
      }
    }
  }
}
